<div class="bg-black min-h-screen">
  <div class="bg-zinc-800 border-b border-zinc-600/40/50">
    <div class="max-w-6xl mx-auto px-5 py-7">
      <h1 class="text-xl font-bold text-white">Training Videos</h1>
      <p class="text-zinc-500 text-sm mt-1"><%= @videos.total_count %> videos available</p>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-5 py-8">
    <% if @videos.empty? %>
      <div class="text-center py-24 text-zinc-600">
        <p class="font-medium text-lg">No videos yet. Check back soon.</p>
      </div>
    <% else %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @videos.each do |video| %>
          <%= link_to video_path(video), class: "group bg-zinc-800 rounded-2xl overflow-hidden border border-zinc-600/40/50 hover:border-red-600/50 transition" do %>
            <!-- Thumbnail -->
            <div class="aspect-video bg-zinc-800 relative overflow-hidden">
              <% if video.thumbnail.present? %>
                <img src="<%= video.thumbnail.url %>" class="w-full h-full object-cover group-hover:scale-105 transition duration-300" alt="">
              <% else %>
                <div class="w-full h-full flex items-center justify-center">
                  <div class="w-12 h-12 bg-red-600/20 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-red-400 ml-1" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"/>
                    </svg>
                  </div>
                </div>
              <% end %>
              <% if video.duration_seconds %>
                <span class="absolute bottom-2 right-2 bg-black/80 text-white text-xs px-2 py-0.5 rounded-md font-medium">
                  <%= video.formatted_duration %>
                </span>
              <% end %>
            </div>
            <!-- Info -->
            <div class="p-4">
              <h3 class="font-semibold text-white group-hover:text-red-400 transition text-sm line-clamp-2 mb-1.5">
                <%= video.title %>
              </h3>
              <p class="text-zinc-500 text-xs"><%= video.created_at.strftime("%B %d, %Y") %></p>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="mt-8"><%= paginate @videos %></div>
    <% end %>
  </div>
</div>
