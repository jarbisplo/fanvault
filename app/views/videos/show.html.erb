<div class="bg-zinc-950 min-h-screen">
  <div class="max-w-4xl mx-auto px-5 py-8">
    <!-- Breadcrumb -->
    <div class="mb-6">
      <%= link_to "Back to videos", videos_path, class: "text-sm text-zinc-500 hover:text-white font-medium" %>
    </div>

    <!-- Player -->
    <div class="bg-black rounded-2xl overflow-hidden shadow-xl mb-7">
      <video
        controls
        controlsList="nodownload"
        oncontextmenu="return false"
        class="w-full aspect-video"
        preload="metadata"
      >
        <source src="<%= @video.video_file.url %>" type="video/mp4">
        Your browser does not support video playback.
      </video>
    </div>

    <!-- Title + meta -->
    <div class="bg-zinc-900 rounded-2xl border border-zinc-800 shadow-none p-6">
      <h1 class="text-2xl font-bold text-white mb-2"><%= @video.title %></h1>
      <p class="text-zinc-500 text-sm mb-5">
        Posted <%= @video.created_at.strftime("%B %d, %Y") %>
        <% if @video.views_count > 0 %>
          &middot; <%= @video.views_count %> views
        <% end %>
      </p>

      <% if @video.description.present? %>
        <div class="border-t border-zinc-800 pt-5">
          <p class="text-zinc-300 text-sm leading-relaxed"><%= simple_format @video.description %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
