<!-- Breadcrumb -->
<div class="mb-6">
  <%= link_to "← Back to videos", videos_path, class: "text-gray-500 hover:text-white text-sm" %>
</div>

<!-- Player -->
<div class="bg-black rounded-2xl overflow-hidden mb-6">
  <video
    controls
    controlsList="nodownload"
    oncontextmenu="return false"
    class="w-full aspect-video"
    preload="metadata"
  >
    <source src="<%= @video.video_file.url %>" type="video/mp4">
    Your browser doesn't support video playback.
  </video>
</div>

<!-- Info -->
<div class="flex items-start justify-between gap-4">
  <div>
    <h1 class="text-2xl font-bold text-white mb-2"><%= @video.title %></h1>
    <p class="text-gray-500 text-sm">
      Posted <%= time_ago_in_words(@video.created_at) %> ago
      <% if @video.views_count > 0 %>
        · <%= @video.views_count %> views
      <% end %>
    </p>
  </div>
</div>

<% if @video.description.present? %>
  <div class="mt-6 bg-gray-900 border border-gray-800 rounded-xl p-5">
    <p class="text-gray-300 text-sm leading-relaxed"><%= simple_format @video.description %></p>
  </div>
<% end %>
