<div class="flex items-center justify-between mb-6">
  <h1 class="text-xl font-bold text-gray-900">Subscribers</h1>
  <span class="text-sm text-gray-400 font-medium"><%= @subscribers.total_count %> active</span>
</div>

<div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
  <% if @subscribers.empty? %>
    <div class="py-16 text-center text-gray-400 text-sm">No subscribers yet.</div>
  <% else %>
    <table class="w-full text-sm">
      <thead>
        <tr class="text-xs text-gray-400 font-medium uppercase tracking-widest border-b border-gray-50">
          <th class="text-left px-6 py-3">Name</th>
          <th class="text-left px-6 py-3">Email</th>
          <th class="text-left px-6 py-3 hidden md:table-cell">Since</th>
          <th class="text-left px-6 py-3 hidden md:table-cell">Renews</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-50">
        <% @subscribers.each do |sub| %>
          <tr class="hover:bg-gray-50/50">
            <td class="px-6 py-4 text-gray-900 font-medium"><%= sub.subscriber.full_name %></td>
            <td class="px-6 py-4 text-gray-500"><%= sub.subscriber.email %></td>
            <td class="px-6 py-4 text-gray-400 hidden md:table-cell"><%= sub.created_at.strftime("%b %d, %Y") %></td>
            <td class="px-6 py-4 text-gray-400 hidden md:table-cell"><%= sub.current_period_end&.strftime("%b %d, %Y") || "â€”" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<div class="mt-4"><%= paginate @subscribers %></div>
