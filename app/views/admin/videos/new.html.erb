<div class="max-w-xl">
  <div class="mb-6">
    <%= link_to "‚Üê Dashboard", admin_root_path, class: "text-gray-500 hover:text-white text-sm" %>
  </div>

  <h1 class="text-2xl font-bold text-white mb-8">Upload Video</h1>

  <%= form_with model: [:admin, @video], multipart: true, class: "space-y-6" do |f| %>
    <% if @video.errors.any? %>
      <div class="bg-red-900/40 border border-red-700 rounded-xl p-4 text-sm text-red-300">
        <% @video.errors.full_messages.each do |msg| %>
          <p>‚Ä¢ <%= msg %></p>
        <% end %>
      </div>
    <% end %>

    <div>
      <%= f.label :title, "Title", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.text_field :title, placeholder: "e.g. Pitching Mechanics - Full Breakdown",
          class: "w-full bg-gray-900 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-600 focus:outline-none focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :description, "Description (optional)", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.text_area :description, rows: 3, placeholder: "What's this video about?",
          class: "w-full bg-gray-900 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-600 focus:outline-none focus:border-blue-500 resize-none" %>
    </div>

    <div>
      <%= f.label :video_file, "Video File", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <label class="flex flex-col items-center justify-center w-full h-32 border-2 border-dashed border-gray-700 rounded-xl cursor-pointer hover:border-blue-500 transition bg-gray-900">
        <div class="text-center">
          <p class="text-gray-400 text-sm">üìÅ Tap to select video</p>
          <p class="text-gray-600 text-xs mt-1">MP4, MOV, MKV ‚Äî max 5GB</p>
        </div>
        <%= f.file_field :video_file, accept: "video/*", class: "hidden" %>
      </label>
      <p id="filename" class="text-gray-500 text-xs mt-2"></p>
    </div>

    <div>
      <%= f.label :thumbnail, "Thumbnail (optional)", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.file_field :thumbnail, accept: "image/*",
          class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:bg-gray-800 file:text-gray-300 hover:file:bg-gray-700" %>
    </div>

    <%= f.submit "Upload Video",
        class: "w-full bg-blue-600 hover:bg-blue-500 text-white font-semibold py-3 rounded-xl transition cursor-pointer" %>
  <% end %>
</div>

<script>
  document.querySelector('input[type="file"][accept="video/*"]').addEventListener('change', function(e) {
    const name = e.target.files[0]?.name;
    if (name) document.getElementById('filename').textContent = '‚úì ' + name;
  });
</script>
