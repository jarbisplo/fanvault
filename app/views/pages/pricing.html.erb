<div class="min-h-screen bg-zinc-950 py-20 px-5">
  <div class="max-w-md mx-auto">
    <div class="text-center mb-10">
      <h1 class="text-4xl font-extrabold text-white mb-3">One plan. Full access.</h1>
      <p class="text-zinc-400">Everything in the library. New content every week. Cancel anytime.</p>
    </div>

    <div class="bg-zinc-900 rounded-3xl border border-zinc-700 overflow-hidden">
      <!-- Top band -->
      <div class="bg-orange-500 px-8 py-7 text-white text-center">
        <p class="text-orange-100 text-xs font-semibold uppercase tracking-widest mb-2">Monthly Plan</p>
        <div class="text-6xl font-extrabold">
          $19
          <span class="text-2xl font-normal text-orange-200">/ mo</span>
        </div>
      </div>

      <div class="px-8 py-8">
        <ul class="space-y-3 mb-8 text-sm text-zinc-300">
          <% [
            "Full video library â€” available immediately",
            "New training videos every week",
            "Stream on any device, any time",
            "Cancel anytime, no commitment"
          ].each do |item| %>
            <li class="flex items-center gap-3">
              <span class="w-5 h-5 bg-orange-500/20 rounded-full flex items-center justify-center shrink-0">
                <svg class="w-3 h-3 text-orange-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </span>
              <%= item %>
            </li>
          <% end %>
        </ul>

        <% if user_signed_in? %>
          <% if current_user.active_subscriber? %>
            <div class="text-center py-3 bg-zinc-800 border border-zinc-700 rounded-xl text-zinc-300 font-semibold text-sm mb-4">
              You already have an active subscription
            </div>
            <%= link_to "Watch Videos", videos_path,
                class: "block text-center w-full text-orange-400 font-semibold text-sm hover:text-orange-300" %>
          <% else %>
            <%= button_to "Subscribe with Stripe", subscribe_path,
                class: "block w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-4 rounded-2xl transition text-center cursor-pointer" %>
          <% end %>
        <% else %>
          <%= link_to "Create account to subscribe", new_user_registration_path,
              class: "block w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-4 rounded-2xl transition text-center" %>
          <p class="text-center text-zinc-500 text-xs mt-4">
            Already have an account?
            <%= link_to "Sign in", new_user_session_path, class: "text-orange-400 hover:text-orange-300" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
