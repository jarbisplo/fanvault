<div class="min-h-screen bg-black py-20 px-5">
  <div class="max-w-md mx-auto">
    <div class="text-center mb-10">
      <p class="text-white/40 text-xs tracking-widest uppercase mb-3">Membership</p>
      <h1 class="text-4xl font-black text-white mb-3">One plan.<br>Full access.</h1>
      <p class="text-white/40 text-sm">Every training video. New drops weekly. Cancel anytime.</p>
    </div>

    <!-- Glass pricing card -->
    <div class="rounded-3xl overflow-hidden" style="background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.08); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);">

      <!-- Price band -->
      <div class="px-8 py-8 text-center" style="background: linear-gradient(135deg, rgba(220,38,38,0.8) 0%, rgba(185,28,28,0.9) 100%); border-bottom: 1px solid rgba(255,255,255,0.1);">
        <p class="text-red-200 text-xs font-bold uppercase tracking-widest mb-3">Monthly</p>
        <div class="text-6xl font-black text-white">
          $19<span class="text-2xl font-normal text-red-200 ml-1">/ mo</span>
        </div>
      </div>

      <div class="px-8 py-8">
        <ul class="space-y-4 mb-8">
          <% [
            "Full video library — available immediately",
            "New training videos every week",
            "Stream on any device, any time",
            "Cancel anytime, no commitment"
          ].each do |item| %>
            <li class="flex items-center gap-3 text-sm text-white/70">
              <span class="w-5 h-5 rounded-full flex items-center justify-center shrink-0" style="background: rgba(220,38,38,0.15); border: 1px solid rgba(220,38,38,0.3);">
                <svg class="w-3 h-3 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </span>
              <%= item %>
            </li>
          <% end %>
        </ul>

        <% if user_signed_in? %>
          <% if current_user.active_subscriber? %>
            <div class="text-center py-3 rounded-2xl text-white/60 font-medium text-sm mb-4" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08);">
              You already have an active subscription
            </div>
            <%= link_to "Watch Videos", videos_path,
                class: "block text-center w-full text-red-400 text-sm font-semibold hover:text-red-300 transition" %>
          <% else %>
            <%= button_to "Subscribe — $19 / month", subscribe_path,
                class: "w-full py-4 rounded-2xl font-black text-white text-sm cursor-pointer transition",
                style: "background: rgba(220,38,38,0.9); border: 1px solid rgba(255,255,255,0.12); box-shadow: 0 8px 32px rgba(220,38,38,0.3);" %>
          <% end %>
        <% else %>
          <%= link_to "Create account to subscribe", new_user_registration_path,
              class: "block w-full py-4 rounded-2xl font-black text-white text-sm text-center transition",
              style: "background: rgba(220,38,38,0.9); border: 1px solid rgba(255,255,255,0.12); box-shadow: 0 8px 32px rgba(220,38,38,0.3);" %>
          <p class="text-center text-white/30 text-xs mt-5">
            Already have an account?
            <%= link_to "Sign in", new_user_session_path, class: "text-red-400 hover:text-red-300 transition" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
