<!-- Hero -->
<section class="relative overflow-hidden min-h-[88vh] flex items-end">
  <!-- Background image (placeholder — replace with real player photo) -->
  <div class="absolute inset-0">
    <img
      src="https://images.unsplash.com/photo-1540747913346-19e32dc3e97e?w=1400&q=80"
      alt="Baseball player"
      class="w-full h-full object-cover object-top"
    >
    <!-- Gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
  </div>

  <!-- Hero text -->
  <div class="relative z-10 max-w-6xl mx-auto px-5 pb-16 w-full">
    <p class="text-green-400 text-sm font-semibold tracking-widest uppercase mb-3">Exclusive Baseball Training</p>
    <h1 class="text-5xl md:text-6xl font-extrabold text-white leading-tight mb-5 max-w-2xl">
      Train like the pros.<br>
      <span class="text-green-400">Every rep counts.</span>
    </h1>
    <p class="text-gray-300 text-lg max-w-lg mb-8">
      Private video library. Real drills. New content every week. Cancel anytime.
    </p>
    <div class="flex items-center gap-4 flex-wrap">
      <%= link_to "Get Access", pricing_path,
          class: "bg-green-500 hover:bg-green-400 text-white text-base font-semibold px-8 py-4 rounded-full transition shadow-lg" %>
      <% if user_signed_in? && current_user.can_watch? %>
        <%= link_to "Watch Videos", videos_path,
            class: "bg-white/10 hover:bg-white/20 text-white text-base font-semibold px-8 py-4 rounded-full border border-white/30 transition" %>
      <% end %>
    </div>
  </div>
</section>

