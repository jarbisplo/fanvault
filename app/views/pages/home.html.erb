<!-- Hero: image block + white card that overlaps it -->
<section class="bg-white">

  <!-- Athlete image block — fixed viewport height -->
  <div class="relative w-full" style="height: 58vh;">
    <%= image_tag "hero-placeholder.jpg",
        alt: "Baseball player",
        class: "w-full h-full object-cover object-top" %>
    <div class="absolute inset-0 bg-gradient-to-b from-black/10 via-transparent to-white/60"></div>
  </div>

  <!-- White card overlaps the image with negative margin + rounded top -->
  <div class="bg-white rounded-t-[2rem] px-7 pb-10 pt-7 -mt-8 shadow-[0_-4px_30px_rgba(0,0,0,0.08)] relative z-10">

    <!-- Small logo mark above headline -->
    <div class="flex justify-center mb-5">
      <div class="w-10 h-1.5 bg-gray-200 rounded-full"></div>
    </div>

    <h1 class="text-3xl font-extrabold text-gray-900 text-center leading-tight mb-3">
      Train smarter.<br>
      <span class="text-green-600">Perform at your best.</span>
    </h1>
    <p class="text-gray-400 text-sm text-center mb-8 max-w-xs mx-auto leading-relaxed">
      Exclusive baseball training videos from a pro. New content every week.
    </p>

    <%= link_to "Get Started", pricing_path,
        class: "block w-full bg-green-500 hover:bg-green-600 text-white text-base font-bold py-4 rounded-2xl text-center transition shadow-md shadow-green-200" %>

    <p class="text-center text-gray-400 text-sm mt-5">
      Already a member?
      <%= link_to "Sign in", new_user_session_path, class: "text-green-600 font-semibold hover:underline" %>
    </p>
  </div>
</section>

<!-- Features section below the fold -->
<section class="bg-gray-50 py-16 px-5">
  <div class="max-w-xl mx-auto">
    <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">What you get</h2>

    <div class="space-y-4">
      <!-- Feature card 1 -->
      <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-100 flex items-center gap-5">
        <div class="w-14 h-14 bg-green-100 rounded-xl flex items-center justify-center shrink-0">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.069A1 1 0 0121 8.87v6.26a1 1 0 01-1.447.894L15 14M3 8a2 2 0 012-2h8a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2V8z"/>
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900 mb-0.5">Pro Training Videos</h3>
          <p class="text-gray-400 text-sm">Drills and mechanics filmed up close. No filler.</p>
        </div>
      </div>

      <!-- Feature card 2 -->
      <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-100 flex items-center gap-5">
        <div class="w-14 h-14 bg-green-100 rounded-xl flex items-center justify-center shrink-0">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900 mb-0.5">Members Only</h3>
          <p class="text-gray-400 text-sm">Private library. Secure streaming only — no downloads.</p>
        </div>
      </div>

      <!-- Feature card 3 -->
      <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-100 flex items-center gap-5">
        <div class="w-14 h-14 bg-orange-100 rounded-xl flex items-center justify-center shrink-0">
          <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900 mb-0.5">New Content Weekly</h3>
          <p class="text-gray-400 text-sm">Fresh training content added every week. Cancel anytime.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CTA strip -->
<section class="bg-green-600 py-14 px-5">
  <div class="max-w-xl mx-auto text-center">
    <h2 class="text-2xl font-bold text-white mb-3">Ready to train like a pro?</h2>
    <p class="text-green-100 text-sm mb-7">Join members already watching exclusive baseball training content.</p>
    <%= link_to "Start Today", pricing_path,
        class: "inline-block bg-white text-green-700 font-bold px-8 py-3.5 rounded-full hover:bg-green-50 transition" %>
  </div>
</section>
