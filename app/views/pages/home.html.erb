<!-- HERO: Full viewport, text on image, glass buttons -->
<section class="relative w-full overflow-hidden" style="height: calc(100vh - 52px);">

  <!-- Athlete image — fills entire section -->
  <%= image_tag "hero-placeholder.jpg",
      alt: "Mauricio Dubon",
      class: "absolute inset-0 w-full h-full object-cover object-center" %>

  <!-- Layered gradient: subtle top dark + heavy bottom dark -->
  <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-black/10"></div>
  <!-- Side vignette for depth -->
  <div class="absolute inset-0 bg-gradient-to-r from-black/30 via-transparent to-black/30"></div>

  <!-- Content positioned over the image -->
  <div class="absolute inset-0 flex flex-col justify-end px-6 pb-10">

    <!-- Overline — single line, no wrap -->
    <div class="flex items-center gap-2 mb-4">
      <span class="text-[10px] font-bold tracking-[0.2em] uppercase text-white/40 whitespace-nowrap">Exclusive Training</span>
      <span class="w-1 h-1 rounded-full bg-orange-500 shrink-0"></span>
      <span class="text-[10px] font-bold tracking-[0.2em] uppercase text-white/40 whitespace-nowrap">MLB Pro</span>
    </div>

    <!-- Big display headline overlaid on image -->
    <h1 class="font-black leading-[0.9] mb-5" style="font-size: clamp(3rem, 11vw, 5.5rem); letter-spacing: -0.03em;">
      <span class="block text-white">Train</span>
      <span class="block text-white">With</span>
      <span class="block text-orange-500" style="text-shadow: 0 0 80px rgba(249,115,22,0.5);">Mauricio.</span>
    </h1>

    <!-- Subtitle -->
    <p class="text-white/50 text-sm leading-relaxed mb-7" style="max-width: 280px;">
      2x Gold Glove winner. The drills that made him one of the best in the game.
    </p>

    <!-- Glass CTA buttons — fixed alignment -->
    <div class="flex items-center gap-3 mb-2">
      <%= link_to pricing_path,
          class: "inline-flex items-center gap-2 px-7 py-3.5 rounded-full font-bold text-sm text-white",
          style: "background: rgba(249,115,22,0.9); backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px); border: 1px solid rgba(255,160,60,0.3); box-shadow: 0 8px 32px rgba(249,115,22,0.35);" do %>
        Get Access
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7"/>
        </svg>
      <% end %>

      <%= link_to new_user_session_path,
          class: "inline-flex items-center px-7 py-3.5 rounded-full font-semibold text-sm text-white/70 hover:text-white transition",
          style: "background: rgba(255,255,255,0.12); backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px); border: 1px solid rgba(255,255,255,0.18);" do %>
        Sign in
      <% end %>
    </div>

  </div>

</section>

<!-- About Mauricio — dark section below fold -->
<section class="bg-black py-16 px-6">
  <div class="max-w-lg mx-auto">

    <!-- Stat cards -->
    <div class="grid grid-cols-3 gap-3 mb-12">
      <div class="rounded-2xl p-4 text-center" style="background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.07); backdrop-filter: blur(8px);">
        <p class="text-2xl font-black text-white">2x</p>
        <p class="text-white/40 text-xs mt-1 leading-tight">Gold Glove</p>
      </div>
      <div class="rounded-2xl p-4 text-center" style="background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.07);">
        <p class="text-2xl font-black text-white">MLB</p>
        <p class="text-white/40 text-xs mt-1 leading-tight">Pro Level</p>
      </div>
      <div class="rounded-2xl p-4 text-center" style="background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.07);">
        <p class="text-2xl font-black text-orange-500">10+</p>
        <p class="text-white/40 text-xs mt-1 leading-tight">Seasons</p>
      </div>
    </div>

    <!-- Bio -->
    <div class="mb-12">
      <h2 class="text-2xl font-black text-white mb-4">About Mauricio</h2>
      <p class="text-white/50 text-sm leading-relaxed">
        Professional outfielder. 2x Gold Glove Award winner and one of the most versatile players in the game. Mauricio built his career through elite preparation — now he's sharing the exact drills and techniques that got him there.
      </p>
    </div>

    <!-- Feature list -->
    <div class="space-y-3">
      <% [
        ["Pro training videos", "Real drills from a Gold Glove outfielder. Nothing generic."],
        ["Members only", "Private library. Secure streaming only — no downloads, no sharing."],
        ["New content weekly", "Fresh drops every week. Cancel anytime."]
      ].each_with_index do |(title, desc), i| %>
        <div class="flex items-start gap-4 py-4 border-b border-white/5 last:border-0">
          <div class="w-8 h-8 rounded-full flex items-center justify-center shrink-0 mt-0.5 text-xs font-black"
               style="background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.1); color: rgba(255,255,255,0.4);">
            0<%= i + 1 %>
          </div>
          <div>
            <p class="text-white font-semibold text-sm mb-0.5"><%= title %></p>
            <p class="text-white/40 text-xs leading-relaxed"><%= desc %></p>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</section>

<!-- Bottom CTA -->
<section class="relative overflow-hidden py-16 px-6 bg-zinc-900">
  <div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle at 30% 50%, rgba(249,115,22,0.4) 0%, transparent 60%);"></div>
  <div class="relative max-w-lg mx-auto text-center">
    <p class="text-white/40 text-xs tracking-widest uppercase mb-3">Ready to level up</p>
    <h2 class="text-3xl font-black text-white mb-3">Train with Mauricio.</h2>
    <p class="text-white/50 text-sm mb-8">Join members getting exclusive access to Mauricio Dubon's training content.</p>
    <%= link_to "Get Access", pricing_path,
        class: "inline-flex items-center gap-2 px-8 py-4 rounded-full font-bold text-white transition",
        style: "background: rgba(249,115,22,0.9); backdrop-filter: blur(12px); -webkit-backdrop-filter: blur(12px); border: 1px solid rgba(255,160,60,0.2); box-shadow: 0 8px 40px rgba(249,115,22,0.35);" %>
  </div>
</section>
