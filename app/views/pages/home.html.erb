<!-- Hero: athlete image top, dark card slides up from bottom -->
<section class="bg-black">

  <!-- Athlete image — top portion -->
  <div class="relative w-full" style="height: 58vh;">
    <%= image_tag "hero-placeholder.jpg",
        alt: "Mauricio Dubon",
        class: "w-full h-full object-cover object-top" %>
    <!-- Dark gradient fading into the card below -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/20 via-transparent to-zinc-950/80"></div>
  </div>

  <!-- Dark card overlaps the image -->
  <div class="bg-zinc-800 rounded-t-[2rem] px-7 pb-10 pt-7 -mt-8 relative z-10">

    <!-- Drag handle -->
    <div class="flex justify-center mb-5">
      <div class="w-10 h-1 bg-zinc-700 rounded-full"></div>
    </div>

    <!-- Badge -->
    <div class="flex justify-center mb-4">
      <span class="bg-blue-900/60 text-blue-300 border border-blue-700/50 text-xs font-semibold px-3 py-1 rounded-full tracking-widest uppercase">
        2x Gold Glove Winner
      </span>
    </div>

    <h1 class="text-3xl font-extrabold text-white text-center leading-tight mb-3">
      Train with a<br>
      <span class="text-red-400">Gold Glove pro.</span>
    </h1>
    <p class="text-zinc-400 text-sm text-center mb-8 max-w-xs mx-auto leading-relaxed">
      Exclusive baseball training from Mauricio Dubon — Atlanta Braves outfielder and 2x Gold Glove Award winner.
    </p>

    <%= link_to "Get Access", pricing_path,
        class: "block w-full bg-red-600 hover:bg-red-700 text-white text-base font-bold py-4 rounded-2xl text-center transition" %>

    <p class="text-center text-zinc-500 text-sm mt-5">
      Already a member?
      <%= link_to "Sign in", new_user_session_path, class: "text-red-400 font-semibold hover:text-red-300" %>
    </p>
  </div>
</section>

<!-- About Mauricio -->
<section class="bg-zinc-900 py-14 px-5">
  <div class="max-w-xl mx-auto">
    <h2 class="text-xl font-bold text-white text-center mb-8">About the trainer</h2>
    <div class="bg-zinc-800 rounded-2xl p-6 border border-zinc-600/40">
      <div class="flex items-start gap-4">
        <div class="w-14 h-14 rounded-full bg-blue-900 border border-blue-700 flex items-center justify-center shrink-0 text-blue-300 font-bold text-lg">
          MD
        </div>
        <div>
          <h3 class="font-bold text-white text-lg leading-tight">Mauricio Dubon</h3>
          <p class="text-red-400 text-sm font-medium mb-3">Atlanta Braves · Center Field</p>
          <p class="text-zinc-400 text-sm leading-relaxed">
            2x Gold Glove Award winner. Formerly of the Houston Astros. One of the best defensive outfielders in Major League Baseball — now sharing the drills and techniques that got him there.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

