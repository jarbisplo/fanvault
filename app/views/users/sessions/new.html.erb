<div class="min-h-screen bg-black flex items-center justify-center py-12 px-5">
  <div class="w-full max-w-sm">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-black text-white">Welcome back</h1>
      <p class="text-white/40 text-sm mt-2">Sign in to your Mauricio Dubon account</p>
    </div>

    <div class="rounded-3xl p-8" style="background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.08); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <div>
          <%= f.label :email, "Email", class: "block text-xs font-bold text-white/40 uppercase tracking-widest mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 rounded-xl text-white text-sm placeholder-white/20 focus:outline-none transition",
              style: "background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.1); focus:border: 1px solid rgba(220,38,38,0.5);" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-xs font-bold text-white/40 uppercase tracking-widest mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-4 py-3 rounded-xl text-white text-sm placeholder-white/20 focus:outline-none transition",
              style: "background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.1);" %>
        </div>

        <div class="flex items-center justify-between">
          <label class="flex items-center gap-2 text-white/40 text-xs cursor-pointer">
            <%= f.check_box :remember_me %>
            Remember me
          </label>
          <%= link_to "Forgot password?", new_user_password_path, class: "text-red-400 text-xs hover:text-red-300 transition" %>
        </div>

        <%= f.submit "Sign in",
            class: "w-full py-3.5 rounded-2xl font-black text-white text-sm cursor-pointer transition",
            style: "background: rgba(220,38,38,0.9); border: 1px solid rgba(255,255,255,0.1); box-shadow: 0 8px 24px rgba(220,38,38,0.25);" %>
      <% end %>

      <p class="text-center text-white/30 text-xs mt-6">
        No account yet?
        <%= link_to "Sign up", new_user_registration_path, class: "text-red-400 font-bold hover:text-red-300 transition" %>
      </p>
    </div>
  </div>
</div>
