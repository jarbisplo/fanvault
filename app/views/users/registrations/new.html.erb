<div class="min-h-screen bg-black flex items-center justify-center py-12 px-5">
  <div class="w-full max-w-sm">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-white">Create account</h1>
      <p class="text-zinc-500 text-sm mt-2">Get access to exclusive training videos</p>
    </div>

    <div class="bg-zinc-800 rounded-3xl border border-zinc-600/40 p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <% if resource.errors.any? %>
          <div class="bg-red-950 border border-red-800 rounded-xl p-3 text-sm text-red-300">
            <% resource.errors.full_messages.each do |msg| %><p>- <%= msg %></p><% end %>
          </div>
        <% end %>

        <div class="grid grid-cols-2 gap-3">
          <div>
            <%= f.label :first_name, "First name", class: "block text-sm font-medium text-zinc-300 mb-2" %>
            <%= f.text_field :first_name, autocomplete: "given-name",
                class: "w-full bg-zinc-800 border border-zinc-600/40 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-transparent" %>
          </div>
          <div>
            <%= f.label :last_name, "Last name", class: "block text-sm font-medium text-zinc-300 mb-2" %>
            <%= f.text_field :last_name, autocomplete: "family-name",
                class: "w-full bg-zinc-800 border border-zinc-600/40 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-transparent" %>
          </div>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-zinc-300 mb-2" %>
          <%= f.email_field :email, autocomplete: "email",
              class: "w-full bg-zinc-800 border border-zinc-600/40 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-transparent" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium text-zinc-300 mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full bg-zinc-800 border border-zinc-600/40 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-transparent" %>
        </div>

        <%= f.submit "Create Account",
            class: "w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3.5 rounded-2xl transition cursor-pointer" %>
      <% end %>

      <p class="text-center text-zinc-500 text-sm mt-6">
        Already have an account?
        <%= link_to "Sign in", new_user_session_path, class: "text-red-400 font-semibold hover:text-red-300" %>
      </p>
    </div>
  </div>
</div>
