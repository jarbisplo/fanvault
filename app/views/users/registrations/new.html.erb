<div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-5">
  <div class="w-full max-w-sm">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Create account</h1>
      <p class="text-gray-500 text-sm mt-2">Get access to exclusive training videos</p>
    </div>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <% if resource.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-xl p-3 text-sm text-red-700">
            <% resource.errors.full_messages.each do |msg| %><p>- <%= msg %></p><% end %>
          </div>
        <% end %>

        <div class="grid grid-cols-2 gap-3">
          <div>
            <%= f.label :first_name, "First name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :first_name, autocomplete: "given-name",
                class: "w-full border border-gray-200 rounded-xl px-4 py-3 text-gray-900 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
          </div>
          <div>
            <%= f.label :last_name, "Last name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :last_name, autocomplete: "family-name",
                class: "w-full border border-gray-200 rounded-xl px-4 py-3 text-gray-900 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
          </div>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autocomplete: "email",
              class: "w-full border border-gray-200 rounded-xl px-4 py-3 text-gray-900 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full border border-gray-200 rounded-xl px-4 py-3 text-gray-900 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
        </div>

        <%= f.submit "Create Account",
            class: "w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3.5 rounded-2xl transition cursor-pointer" %>
      <% end %>

      <p class="text-center text-gray-400 text-sm mt-6">
        Already have an account?
        <%= link_to "Sign in", new_user_session_path, class: "text-green-600 font-semibold hover:underline" %>
      </p>
    </div>
  </div>
</div>
