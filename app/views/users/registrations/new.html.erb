<div class="min-h-screen bg-black flex items-center justify-center py-12 px-5">
  <div class="w-full max-w-sm">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-black text-white">Create account</h1>
      <p class="text-white/40 text-sm mt-2">Get access to exclusive training videos</p>
    </div>

    <div class="rounded-3xl p-8" style="background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.08); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <% if resource.errors.any? %>
          <div class="rounded-2xl p-4 text-sm text-red-300" style="background: rgba(220,38,38,0.1); border: 1px solid rgba(220,38,38,0.2);">
            <% resource.errors.full_messages.each do |msg| %><p>- <%= msg %></p><% end %>
          </div>
        <% end %>

        <div class="grid grid-cols-2 gap-3">
          <div>
            <%= f.label :first_name, "First name", class: "block text-xs font-bold text-white/40 uppercase tracking-widest mb-2" %>
            <%= f.text_field :first_name, autocomplete: "given-name",
                class: "w-full px-4 py-3 rounded-xl text-white text-sm focus:outline-none",
                style: "background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.1);" %>
          </div>
          <div>
            <%= f.label :last_name, "Last name", class: "block text-xs font-bold text-white/40 uppercase tracking-widest mb-2" %>
            <%= f.text_field :last_name, autocomplete: "family-name",
                class: "w-full px-4 py-3 rounded-xl text-white text-sm focus:outline-none",
                style: "background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.1);" %>
          </div>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-xs font-bold text-white/40 uppercase tracking-widest mb-2" %>
          <%= f.email_field :email, autocomplete: "email",
              class: "w-full px-4 py-3 rounded-xl text-white text-sm focus:outline-none",
              style: "background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.1);" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-xs font-bold text-white/40 uppercase tracking-widest mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-4 py-3 rounded-xl text-white text-sm focus:outline-none",
              style: "background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.1);" %>
        </div>

        <%= f.submit "Create Account",
            class: "w-full py-3.5 rounded-2xl font-black text-white text-sm cursor-pointer transition",
            style: "background: rgba(220,38,38,0.9); border: 1px solid rgba(255,255,255,0.1); box-shadow: 0 8px 24px rgba(220,38,38,0.25);" %>
      <% end %>

      <p class="text-center text-white/30 text-xs mt-6">
        Already have an account?
        <%= link_to "Sign in", new_user_session_path, class: "text-red-400 font-bold hover:text-red-300 transition" %>
      </p>
    </div>
  </div>
</div>
