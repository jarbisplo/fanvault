<div class="max-w-sm mx-auto py-16">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-white">Create account</h1>
    <p class="text-gray-500 text-sm mt-2">Start watching exclusive training videos</p>
  </div>

  <div class="bg-gray-900 border border-gray-800 rounded-2xl p-8">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <% if resource.errors.any? %>
        <div class="bg-red-900/40 border border-red-700 rounded-xl p-3 text-sm text-red-300">
          <% resource.errors.full_messages.each do |msg| %><p>â€¢ <%= msg %></p><% end %>
        </div>
      <% end %>

      <div class="grid grid-cols-2 gap-3">
        <div>
          <%= f.label :first_name, "First name", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.text_field :first_name, autocomplete: "given-name",
              class: "w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-blue-500" %>
        </div>
        <div>
          <%= f.label :last_name, "Last name", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.text_field :last_name, autocomplete: "family-name",
              class: "w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-blue-500" %>
        </div>
      </div>

      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.email_field :email, autocomplete: "email",
            class: "w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password",
            class: "w-full bg-gray-800 border border-gray-700 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-blue-500" %>
      </div>

      <%= f.submit "Create Account",
          class: "w-full bg-blue-600 hover:bg-blue-500 text-white font-semibold py-3 rounded-xl transition cursor-pointer" %>
    <% end %>

    <p class="text-center text-gray-500 text-sm mt-6">
      Already have an account?
      <%= link_to "Sign in", new_user_session_path, class: "text-blue-400 hover:text-blue-300" %>
    </p>
  </div>
</div>
